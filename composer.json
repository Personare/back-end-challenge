{
    "name": "otaodev/back-end-challenge",
    "scripts": {
        "test": "vendor/bin/phpunit",
        "dev": "php -S localhost:9000 -t public/"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Tiago Oliveira",
            "email": "dev.tiago.oliveira@gmail.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "*",
        "phpunit/php-code-coverage": "^10.0",
        "phpstan/phpstan": "^1.9",
        "phpmd/phpmd": "^2.13",
        "phpro/grumphp": "^1.15"
    }, 
    "config": {
        "allow-plugins": {
            "phpro/grumphp": true
        }
    }
}
